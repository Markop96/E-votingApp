    <section id="steps" class="py-5 bg-light">
        <div class="container200" id="contact">
            <h2 style="color:darkgoldenrod; text-align:center; font-weight:800; margin-bottom:30px;">Kontaktirajte nas</h2>
            <form>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingName" placeholder="Npr: Marko Markovic">
                    <label for="floatingName">Ime i prezime</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingInput" placeholder="Npr: imeprezime@gmail.com">
                    <label for="floatingInput">E-mail adresa</label>
                </div>

                <div class="form-floating">
                    <textarea class="form-control" placeholder="Ostavite poruku ovde" id="floatingTextarea" maxlength="500" style="resize:none;height:150px;"></textarea>
                    <label for="floatingTextarea">Poruka (maksimalno 500 karaktera)</label>
                </div>

                <div class="form-floating" style="margin-top:15px">
                    <select class="form-select" id="floatingSelect" aria-label="Izaberite nešto od ponuđenog" required>
                        <option value="" disabled selected>Izaberite stavku iz padajućeg menija</option>
                        <option value="1">Tehnički zahtev/pomoć</option>
                        <option value="2">Komentar</option>
                        <option value="3">Drugo</option>
                    </select>
                    <label for="floatingSelect">Svrha poruke</label>
                </div>



                <div id="emailHelp" class="form-text" style="margin-top:20px; text-align:center">
                    Vaši podaci koje ostavljate potpuno su sigurni i neće biti dalje deljeni!
                </div>
                <div style="text-align:center">
                    <button class="buttonsend">
                        Pošalji <i class="bi bi-send"></i>
                    </button>
                </div>
            </form>
        </div>
    </section>

